{
  "name": "langly",
  "version": "2.0.2",
  "description": "Tiny language and localization library.",
  "author": "Utily Contributors",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/payfunc/langly"
  },
  "bugs": {
    "url": "https://github.com/payfunc/langly/issues"
  },
  "homepage": "https://payfunc.com/open-source/langly",
  "license": "MIT",
  "private": false,
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "git": {
    "tagName": "v${version}"
  },
  "github": {
    "release": true
  },
  "jest": {
    "transform": {
      "^.+\\.(j|t)sx?$": "ts-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!(cryptly|authly|@payfunc|gracely|isoly|servly|cloud-http|flagly)/.*)"
    ],
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      }
    },
    "testEnvironment": "node",
    "testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
    "testPathIgnorePatterns": [
      "node_modules/",
      "dist/"
    ],
    "collectCoverageFrom": [
      "**/*.{ts,tsx,js,jsx}",
      "!**/node_modules/**",
      "!**/dist/**"
    ],
    "preset": "ts-jest",
    "testMatch": null
  },
  "scripts": {
    "build": "tsc -p .",
    "lint": "eslint '**/*.{js,ts,tsx}'",
    "fix": "eslint '**/*.{js,ts,tsx}' --fix",
    "pretest": "npm run build",
    "test": "jest",
    "prepare": "npm run build",
    "clean": "rm -rf dist node_modules coverage"
  },
  "dependencies": {
    "isoly": "2.0.13"
  },
  "devDependencies": {
    "@types/jest": "^29",
    "@types/node": "^18.11.9",
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "babel-core": "^6.26.3",
    "babel-jest": "^29",
    "eslint": "^8.27.0",
    "eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20221021",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "jest": "^29",
    "prettierx": "github:utily/eslint-plugin-prettierx#utily-20221021",
    "ts-jest": "^29",
    "typescript": "^4.8.4"
  }
}
