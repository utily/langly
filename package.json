{
	"name": "langly",
	"version": "2.0.6",
	"description": "Tiny language and localization library.",
	"author": "Utily Contributors",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/payfunc/langly"
	},
	"bugs": {
		"url": "https://github.com/payfunc/langly/issues"
	},
	"homepage": "https://payfunc.com/open-source/langly",
	"license": "MIT",
	"private": false,
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"git": {
		"tagName": "v${version}"
	},
	"github": {
		"release": true
	},
	"jest": {
		"transform": {
			"^.+\\.(j|t)sx?$": [
				"ts-jest",
				{
					"tsconfig": "./tsconfig.test.json"
				}
			],
			"^.+\\.(js)$": "babel-jest"
		},
		"transformIgnorePatterns": [
			"<rootDir>/node_modules/(?!(cryptly|authly|isoly|gracely|cloudly-http|cloudly-router|cloudly-formdata|fetch-blob|formdata-polyfill|isly)/.*)"
		],
		"testEnvironment": "node",
		"testRegex": "((\\.|/)(test|spec))(\\.|\\/.+)(jsx?|tsx?)$",
		"testPathIgnorePatterns": [
			"node_modules/",
			"dist/"
		],
		"collectCoverageFrom": [
			"**/*.{ts,tsx,js,jsx}",
			"!**/node_modules/**",
			"!**/dist/**"
		]
	},
	"scripts": {
		"build": "tsc -p .",
		"lint": "eslint '**/*.{js,ts,tsx}'",
		"fix": "eslint '**/*.{js,ts,tsx}' --fix",
		"pretest": "npm run build",
		"test": "jest",
		"prepare": "npm run build",
		"clean": "rm -rf dist node_modules coverage"
	},
	"dependencies": {
		"isoly": "2.0.21"
	},
	"devDependencies": {
		"@types/jest": "^29",
		"@types/node": "^20.3.3",
		"@typescript-eslint/eslint-plugin": "^5.60.1",
		"@typescript-eslint/parser": "^5.60.1",
		"babel-jest": "^29",
		"eslint": "^8.44.0",
		"eslint-plugin-prettierx": "github:utily/eslint-plugin-prettierx#utily-20231004",
		"eslint-plugin-simple-import-sort": "^10.0.0",
		"jest": "^29",
		"prettierx": "github:utily/prettierx#utily-20231004",
		"ts-jest": "^29",
		"typescript": "^5.1.6"
	},
	"overrides": {
		"semver": "^7.5.3",
		"optionator": "^0.9.3"
	}
}
